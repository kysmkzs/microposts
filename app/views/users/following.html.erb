<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= render 'shared/user_info' %>
        <p class="stats"><%= render 'shared/stats' %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Following (<%= @user.following_relationships.count %>)</h3>
    <% if @follower.any? %>
      <ul class="following">
        <%= render 'shared/user_following' %>
      </ul>
    <% end %>
    <%= paginate @follower %>
  </div>
</div>
